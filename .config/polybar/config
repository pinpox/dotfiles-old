[module/weather]

format-underline = #79c3ce
type = custom/script
interval = 10
format = <label>
format-prefix = "ÔÉÇ "
format-prefix-foreground = ${colors.foreground-alt}
exec = ~/.config/polybar/weather
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[settings]
